{% extends 'base.html.twig' %}

{% block title %}Toutes les offres{% endblock %}

{% block body %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <div class="container">
        <a href="/users/offres/create" class="btn btn-primary">Cr√©er une offre</a>
        <div class="row">
            {% for offre in offres %}
                <div class="col-md-4">
                    <div class="card" >
                        <img src="https://via.placeholder.com/150" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">{{offre.title}}</h5>                            
                            <p class="card-text">Ville : {{offre.ville}}</p>
                            <p>Contrat : {{offre.contrat.nom}} </p>
                            <p>Temps : {{offre.type.nom}}</p>
                            <a href="/users/offres/{{offre.id}}" class="btn btn-primary">Voir l'offre</a>
                        </div>
                    </div>
                </div>
            {% endfor %}            
        </div>

    </div>




{% endblock %}
