{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}

    <div class="mb-3">     
        <h1> Welcome home ! </h1>

    {% if app.user %}
        <p> You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a> </p>
    {% else %}
        <p> You are currently logged off. Please log in or create an account. </p>
        <p> You can also <a href="/offres">continue as a guest</a> if you want to see the offers. </p>
        <a href="/login" class="btn btn-primary">Login</a>
        <a href="/register" class="btn btn-primary">Register</a>
       
    {% endif %}

    </div>




{% endblock %}
